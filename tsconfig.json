{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "node",
      "vitest/globals"
    ],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types", // Temporary directory for .d.ts files
    "sourceMap": true, // Keep source maps for debugging
    "outDir": "./dist", // Rollup will handle the final output structure
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "__benchmark__/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}